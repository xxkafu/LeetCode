//solution:
//easy
class Solution {
public:
    int findMin(vector<int>& nums) {
        if(nums.size()==0)
            return 0;
        int right = nums.size()-1;
        int left = 0;
        while(left<right){
            if(left+1==right)
                return min(nums[left],nums[right]);
            if(nums[left]<nums[right])
                return nums[left];
            int mid= left+(right-left)/2;
            if(nums[left]<nums[mid])
                left=mid+1;
            else
                right=mid;
        }
        return nums[left];
        
    }
};
